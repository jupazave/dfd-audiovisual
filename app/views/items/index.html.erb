
<div class="panel panel-default">

  <table class="table table-bordered table-striped" id="sortable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Text</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr data-item-id=<%= "#{item.id}" %> class="item">
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.text %></td>
          <td class="text-center"><%= link_to 'Show', diagram_item_path(@diagram, item), :class => 'btn btn-default' %></td>
          <td class="text-center"><%= link_to 'Edit', edit_diagram_item_path(@diagram, item), :class => 'btn btn-default' %></td>
          <td class="text-center"><%= link_to 'Destroy', diagram_item_path(@diagram, item), method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-default'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Item', new_diagram_item_path(@diagram), :class => 'btn btn-default' %>
