<h1>Listing diagrams</h1>

<div class="panel panel-default">

  <table class="table table-bordered table-striped" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @diagrams.each do |diagram| %>
        <tr>
          <td><%= diagram.name %></td>
          <td><%= diagram.description %></td>
          <td class="text-center"><%= link_to 'Show', diagram, :class => 'btn btn-default' %></td>
          <td class="text-center"><%= link_to 'Edit', edit_diagram_path(diagram), :class => 'btn btn-default' %></td>
          <td class="text-center"><%= link_to 'Destroy', diagram, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to 'New Diagram', new_diagram_path, :class => 'btn btn-default' %>
